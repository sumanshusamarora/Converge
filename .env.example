# OpenAI
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"
# Opik
OPIK_API_KEY="YOUR_OPIK_API_KEY"
OPIK_PROJECT_NAME="converge"
OPIK_WORKSPACE="YOUR_WORKSPACE"
OPIK_URL_OVERRIDE="https://www.comet.com/opik/api"
# Optional controls
OPIK_TRACK_DISABLE="false"
# Agent configuration
CONVERGE_AGENT_PROVIDER="codex"
CONVERGE_CODEX_ENABLED="false"
CONVERGE_OPENAI_MODEL=""
# Execution configuration
CONVERGE_EXECUTION_MODE="plan"
CONVERGE_ALLOWLISTED_CMDS="pytest,ruff,npm,pnpm,yarn,python,pip,git"
CONVERGE_REQUIRE_GIT_CLEAN="true"
CONVERGE_CREATE_BRANCH="true"
# Queue and worker configuration
SQLALCHEMY_DATABASE_URI="sqlite:///./converge.db"
CONVERGE_QUEUE_BACKEND="db"
CONVERGE_WORKER_POLL_INTERVAL_SECONDS="2"
CONVERGE_WORKER_BATCH_SIZE="1"
CONVERGE_WORKER_MAX_ATTEMPTS="3"
# Artifacts directory
CONVERGE_OUTPUT_DIR=".converge"
# Server configuration
CONVERGE_SERVER_HOST="0.0.0.0"
CONVERGE_SERVER_PORT="8080"
# Webhook security and idempotency
CONVERGE_WEBHOOK_SECRET=""
CONVERGE_WEBHOOK_MAX_BODY_BYTES="262144"
CONVERGE_WEBHOOK_IDEMPOTENCY_TTL_SECONDS="86400"
# Frontend configuration
NEXT_PUBLIC_API_BASE_URL="http://localhost:8080"
